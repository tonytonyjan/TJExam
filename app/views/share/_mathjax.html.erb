<script type="text/x-mathjax-config">
  MathJax.Hub.Config({
    extensions: ["tex2jax.js"],
    jax: ["input/TeX", "output/HTML-CSS"],
    tex2jax: {
      inlineMath: [ ['$','$'], ["\\(","\\)"] ]
    },
    TeX: {
      Macros: {
        RR: "\\bf R",
        bold: ["{\\bf #1}",1]
      }
    },
    "HTML-CSS": {
      linebreaks: {
        automatic: true
      }
    }
  });
</script>
<%= javascript_include_tag "http://cdn.mathjax.org/mathjax/latest/MathJax.js" %>